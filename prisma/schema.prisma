// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}


model Event {
  id Int @id @default(autoincrement())
  name String 
  localization String
  type String 
  date String
  startsAt String
  endsAt String

  @@map("event")
}

model User {
  id Int @id @default(autoincrement())
  name String
  email String @unique
  password String
  type String @default("client")

  @@map("user")
}

